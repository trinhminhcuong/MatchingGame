<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bamboo"
    tools:context="com.example.cuong.trcxanh.Activities.I_Sign">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edUserName10"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Tài khoản"
            android:textAlignment="center"
            android:textSize="20dp"
            android:maxLines="1"
            android:textColor="#000000"
            android:background="#ffffff"/>
        <EditText
            android:id="@+id/edPassword10"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:lines="1"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/btnSignIn10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Đăng nhập"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tvSignUp10"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Đăng ký"
            android:layout_marginTop="15dp"
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/tvGuest10"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập với tư cách khách"
            android:textStyle="normal"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"/>
    </LinearLayout>

</RelativeLayout>
